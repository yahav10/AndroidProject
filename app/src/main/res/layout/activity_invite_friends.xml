<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tommyahav.androidfinal.inviteFriends"
    android:orientation="vertical"
    android:background="#00345d">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <ImageView android:src="@drawable/logonew1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/logo"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/invite_header"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Invite Members:"
        android:singleLine="false"
        android:textSize="27dp"
        android:textColor="#FFAD33"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/invite_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="Friend&apos;s Email Address"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Add Member"
        android:id="@+id/angry_btn"
        android:background="@drawable/button"
        android:textColor="#212121"
        android:textSize="20sp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp" />
    <EditText
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_height="160dp"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:background="@drawable/back"
        android:id="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/angry_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/invite_send_button"
        android:id="@+id/angry_btn"
        android:background="@drawable/button"
        android:textColor="#212121"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
